{
  "name": "playwright-magic-steps",
  "description": "Auto-transform JavaScript comments into Playwright steps",
  "version": "0.3.0",
  "type": "commonjs",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./esm": "./dist/pwHooks/esm/registerLoader.js"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "prepare": "git config core.hooksPath .hooks",
    "lint": "eslint .",
    "tsc": "tsc",
    "knip": "knip -c knip.config.ts",
    "prettier": "prettier --check --ignore-unknown .",
    "prettier:w": "prettier --write --ignore-unknown .",
    "test": "vitest run test/unit",
    "e2e": "npm run build && vitest run test/e2e/e2e.spec.ts --sequence.concurrent --test-timeout=10000",
    "test:all": "npm test && npm run e2e",
    "example": "npm run build && npx playwright test -c example",
    "toc": "markdown-toc -i README.md",
    "pw": "npm i --no-save @playwright/test@$PW",
    "build": "bash scripts/build.sh",
    "release": "bash scripts/release.sh"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.41"
  },
  "devDependencies": {
    "@eslint/js": "9.7.0",
    "@playwright/test": "1.45.3",
    "@types/node": "^18.15.0",
    "cross-env": "7.0.3",
    "eslint": "8.57.0",
    "eslint-plugin-playwright": "1.6.2",
    "globals": "15.8.0",
    "knip": "5.27.0",
    "lint-staged": "15.2.7",
    "markdown-toc": "1.2.0",
    "np": "10.0.7",
    "prettier": "3.3.3",
    "publint": "0.2.8",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4",
    "typescript-eslint": "7.17.0",
    "vitest": "2.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/playwright-magic-steps.git"
  },
  "keywords": [
    "playwright",
    "steps",
    "testing",
    "e2e"
  ],
  "funding": "https://github.com/sponsors/vitalets",
  "license": "MIT"
}
